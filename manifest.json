{
  "name": "Inspirobot #1 Fan Extension",
  "version": "1.0",
  "description": "Retrieves and displays inspirational quotes from inspirobot.",
  "permissions": ["declarativeContent", "https://inspirobot.me/"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/hal16.png",
      "32": "images/hal32.png",
      "48": "images/hal48.png",
      "128": "images/hal128.png"
    }
  },
  "icons": {
    "16": "images/hal16.png",
    "32": "images/hal32.png",
    "48": "images/hal48.png",
    "128": "images/hal128.png"
  },
  "manifest_version": 2
}
